# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/mdmc-crm

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api2.mdmcmusicads.com/api/auth/google/callback

# Frontend URLs
FRONTEND_URL=https://adminpanel.mdmcmusicads.com
CLIENT_URL=https://adminpanel.mdmcmusicads.com

# Session Secret (for Google OAuth sessions)
SESSION_SECRET=your-session-secret-key

# Email Configuration (for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@mdmcmusicads.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# API Keys (for external integrations)
VALID_API_KEYS=api-key-1,api-key-2

# Admin Credentials
ADMIN_EMAIL=admin@mdmcmusicads.com
ADMIN_PASSWORD=MDMC_Admin_2025!

# External APIs
YOUTUBE_API_KEY=your-youtube-api-key
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Railway Deployment
RAILWAY_STATIC_URL=https://api2.mdmcmusicads.com
RAILWAY_PUBLIC_DOMAIN=api2.mdmcmusicads.com